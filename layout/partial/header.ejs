<body>
<!-- navigation -->
<div class="ts fluid basic link big menu" id="menu-color-id">
    <div class="ts narrow container relaxed stackable grid" style=" padding-left: 25px; ">
        <% for (var i in theme.menu){ %>
            <a class="item" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
    </div>
</div>
<!-- the end of navigation -->

<!-- big bang title -->
<div class="ts padded horizontally fitted fluid slate" style="background-color: <%= theme.title_background_color %>;">
    <div class="ts narrow container relaxed stackable grid" style=" padding-left: 35px; ">
        <!-- Title -->
        <h1 class="ts header be-center-h1">
            <span style="color: <%= theme.title_color %>;" id="big-title"><%= config.title %></span>
            <div class="sub header" id="slogan-bar" style=" margin-top: 15px; color: <%= theme.title_color %>;"><% if(theme.slogan.length == 1){ %><%=  theme.slogan %><% } %></div>
        </h1>
        <!-- the end of title -->
    </div>
</div>
<!-- the end of big bang title -->